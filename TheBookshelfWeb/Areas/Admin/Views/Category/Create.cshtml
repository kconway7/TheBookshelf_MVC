@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient mt-0 py-3 rounded-top-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" type="text" class="form-control border-2 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="p-0"></label>
                    <input asp-for="DisplayOrder" type="text" class="form-control border-2 shadow" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control rounded-2">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control rounded-2">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

 @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}