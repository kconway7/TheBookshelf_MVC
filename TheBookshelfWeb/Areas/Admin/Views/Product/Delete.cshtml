@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient mt-0 py-3 rounded-top-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0"></label>
                    <input asp-for="Title" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0"></label>
                    <input asp-for="Description" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0"></label>
                    <input asp-for="ISBN" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0"></label>
                    <input asp-for="Author" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0"></label>
                    <input asp-for="ListPrice" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0"></label>
                    <input asp-for="Price" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0"></label>
                    <input asp-for="Price50" disabled type="text" class="form-control border-2 shadow" />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0"></label>
                    <input asp-for="Price100" disabled type="text" class="form-control border-2 shadow" />
                </div>

                <div class="row p-1">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control rounded-2">Delete Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control rounded-2">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


